{
  // Azure-specific configuration overrides for Production
  "Messaging": {
    "Provider": "AzureServiceBus",
    "ConnectionString": "${AZURE_SERVICE_BUS_CONNECTION_STRING}",
    "Outbox": {
      "Enabled": true,
      "QueryDelay": 50,
      "QueryLimit": 200
    }
  },

  "Consul": {
    "Host": "http://consul.azure.prod.internal:8500"
  },

  "ReverseProxy": {
    "Clusters": {
      "user-service": {
        "Destinations": {
          "primary": {
            "Address": "http://user-service.azure.internal"
          }
        }
      },
      "catalog-service": {
        "Destinations": {
          "primary": {
            "Address": "http://catalog-service.azure.internal"
          }
        }
      },
      "order-service": {
        "Destinations": {
          "primary": {
            "Address": "http://order-service.azure.internal"
          }
        }
      },
      "notification-service": {
        "Destinations": {
          "primary": {
            "Address": "http://notification-service.azure.internal"
          }
        }
      }
    }
  },

  "Jaeger": {
    "AgentHost": "jaeger.azure.internal",
    "AgentPort": 6831
  },

  "Seq": {
    "ServerUrl": "http://seq.azure.internal:5341"
  }
}
