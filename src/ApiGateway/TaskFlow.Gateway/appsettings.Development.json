{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Debug",
      "MassTransit": "Debug"
    }
  },

  // Development uses local infrastructure (localhost or Docker Compose)
  "Infrastructure": {
    "MessagingTechnology": "MassTransit",
    "EventBusMode": "InMemory" // Fast development, no persistence overhead
  },

  "Messaging": {
    "Provider": "RabbitMQ",
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest",
    "Outbox": {
      "Enabled": false // Disabled in Development for faster iteration
    }
  },

  "Consul": {
    "Host": "http://localhost:8500",
    "ServiceAddress": "http://localhost",
    "ServicePort": 5000
  },

  "ReverseProxy": {
    "Clusters": {
      "user-service": {
        "Destinations": {
          "primary": {
            "Address": "http://localhost:5001" // Local development port
          }
        }
      },
      "catalog-service": {
        "Destinations": {
          "primary": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "order-service": {
        "Destinations": {
          "primary": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "notification-service": {
        "Destinations": {
          "primary": {
            "Address": "http://localhost:5004"
          }
        }
      },
      "task-service": {
        "Destinations": {
          "primary": {
            "Address": "http://localhost:5005"
          }
        }
      }
    }
  },

  "Jaeger": {
    "AgentHost": "localhost",
    "AgentPort": 6831
  },

  "Seq": {
    "ServerUrl": "http://localhost:5341"
  },

  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:4200" ],
    "AllowCredentials": true
  }
}
