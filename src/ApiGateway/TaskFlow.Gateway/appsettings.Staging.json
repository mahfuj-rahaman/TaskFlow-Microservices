{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information",
      "MassTransit": "Information"
    }
  },

  // Staging uses persistent messaging with Hybrid EventBus mode
  "Infrastructure": {
    "MessagingTechnology": "MassTransit",
    "EventBusMode": "Hybrid" // Both immediate + persistent for staging validation
  },

  "Messaging": {
    "Provider": "RabbitMQ",
    "Host": "rabbitmq-staging.internal",
    "Port": 5672,
    "VirtualHost": "/staging",
    "Username": "${RABBITMQ_USERNAME}", // From environment variables
    "Password": "${RABBITMQ_PASSWORD}",
    "Retry": {
      "RetryCount": 5,
      "InitialIntervalSeconds": 5,
      "IntervalIncrementSeconds": 10
    },
    "Outbox": {
      "Enabled": true,
      "QueryDelay": 100,
      "QueryLimit": 100
    },
    "UseMessageScheduler": true
  },

  "Consul": {
    "Host": "http://consul-staging.internal:8500",
    "ServiceAddress": "http://api-gateway-staging.internal",
    "ServicePort": 80
  },

  "ReverseProxy": {
    "Clusters": {
      "user-service": {
        "Destinations": {
          "primary": {
            "Address": "http://user-service-staging.internal"
          }
        }
      },
      "catalog-service": {
        "Destinations": {
          "primary": {
            "Address": "http://catalog-service-staging.internal"
          }
        }
      },
      "order-service": {
        "Destinations": {
          "primary": {
            "Address": "http://order-service-staging.internal"
          }
        }
      },
      "notification-service": {
        "Destinations": {
          "primary": {
            "Address": "http://notification-service-staging.internal"
          }
        }
      },
      "task-service": {
        "Destinations": {
          "primary": {
            "Address": "http://task-service-staging.internal"
          }
        }
      }
    }
  },

  "Jaeger": {
    "AgentHost": "jaeger-staging.internal",
    "AgentPort": 6831
  },

  "Seq": {
    "ServerUrl": "http://seq-staging.internal:5341",
    "ApiKey": "${SEQ_API_KEY}"
  },

  "Cors": {
    "AllowedOrigins": [ "https://staging.taskflow.com" ],
    "AllowCredentials": true
  },

  "RateLimiting": {
    "Enabled": true,
    "PermitLimit": 200,
    "Window": "00:01:00",
    "QueueLimit": 20
  }
}
