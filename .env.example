# =============================================================================
# TaskFlow Microservices - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=Development

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=taskflow

# Redis
REDIS_PASSWORD=redis123

# RabbitMQ
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=rabbitmq

# JWT
JWT_SECRET_KEY=TaskFlow-Super-Secret-Key-Change-In-Production-Min-32-Chars!!!
JWT_ISSUER=TaskFlow.ApiGateway
JWT_AUDIENCE=TaskFlow.Services

# Service Ports (for local development without Docker)
IDENTITY_SERVICE_PORT=5001
USER_SERVICE_PORT=5002
TASK_SERVICE_PORT=5003
NOTIF_SERVICE_PORT=5004
ADMIN_SERVICE_PORT=5007
API_GATEWAY_PORT=5000
