# TaskFlow Microservices Environment Variables Template
# Copy this file to .env and fill in your values

# ======================
# Environment
# ======================
ENVIRONMENT="Development"

# ======================
# PostgreSQL Database
# ======================
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your_secure_postgres_password"
POSTGRES_DB="taskflow"

# ======================
# Redis Cache
# ======================
REDIS_PASSWORD="your_secure_redis_password"

# ======================
# RabbitMQ Message Broker
# ======================
RABBITMQ_USER="rabbitmq"
RABBITMQ_PASSWORD="your_secure_rabbitmq_password"

# ======================
# Application Settings
# ======================
# Logging
ASPNETCORE_ENVIRONMENT="Development"
ENABLE_SENSITIVE_DATA_LOGGING="true"

# Ports (Local Development)
TASK_SERVICE_PORT="5001"
TASK_SERVICE_HTTPS_PORT="5002"
POSTGRES_PORT="5432"
REDIS_PORT="6379"
RABBITMQ_PORT="5672"
RABBITMQ_MANAGEMENT_PORT="15672"

# ======================
# Security (Production)
# ======================
# JWT Settings
# JWT_SECRET_KEY="your_jwt_secret_key_here"
# JWT_ISSUER="https://taskflow.com"
# JWT_AUDIENCE="https://api.taskflow.com"
# JWT_EXPIRY_MINUTES="60"

# API Keys
# API_KEY="your_api_key_here"

# ======================
# Monitoring & Logging
# ======================
# SEQ_URL="http://localhost:5341"
# JAEGER_AGENT_HOST="localhost"
# JAEGER_AGENT_PORT="6831"

# ======================
# External Services
# ======================
# Email Service
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USERNAME="your_email@gmail.com"
# SMTP_PASSWORD="your_email_password"
# SMTP_FROM_EMAIL="noreply@taskflow.com"

# Cloud Storage (Future)
# AWS_ACCESS_KEY_ID="your_aws_access_key"
# AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
# AWS_REGION="us-east-1"
# S3_BUCKET_NAME="taskflow-uploads"

# ======================
# Feature Flags
# ======================
ENABLE_SWAGGER="true"
ENABLE_CORS="true"
ENABLE_RATE_LIMITING="false"

# ======================
# Performance Tuning
# ======================
# Database Connection Pool
DB_MIN_POOL_SIZE="5"
DB_MAX_POOL_SIZE="100"
DB_CONNECTION_TIMEOUT="30"

# Redis Connection
REDIS_CONNECT_TIMEOUT="5000"
REDIS_SYNC_TIMEOUT="5000"
REDIS_ABORT_ON_CONNECT_FAIL="false"

# RabbitMQ Settings
RABBITMQ_HEARTBEAT="60"
RABBITMQ_NETWORK_RECOVERY_INTERVAL="10"
RABBITMQ_AUTOMATIC_RECOVERY_ENABLED="true"
