{
  "// INSTRUCTIONS": "Add this Messaging section to your appsettings.json",
  "// HOW TO USE": "1. Copy the Messaging section below to appsettings.json",
  "// HOW TO USE": "2. To switch providers, change ONLY the 'Provider' value",
  "// HOW TO USE": "3. Or use .env file to override with environment variables",

  "Messaging": {
    "// SWITCH PROVIDERS HERE": "Change Provider to: RabbitMQ, AmazonSQS, AzureServiceBus, or InMemory",
    "Provider": "RabbitMQ",

    "// RabbitMQ Configuration": "Used when Provider = RabbitMQ",
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest",

    "// AWS SQS Configuration": "Used when Provider = AmazonSQS",
    "AwsRegion": "us-east-1",
    "AwsAccessKey": "",
    "AwsSecretKey": "",

    "// Azure Service Bus Configuration": "Used when Provider = AzureServiceBus",
    "ConnectionString": "",

    "// Retry Configuration": "Applies to all providers",
    "Retry": {
      "RetryCount": 3,
      "InitialIntervalSeconds": 5,
      "IntervalIncrementSeconds": 5
    },

    "// Outbox Pattern": "For reliable message delivery",
    "Outbox": {
      "Enabled": true,
      "QueryDelay": 100,
      "QueryLimit": 100
    },

    "// Message Scheduler": "Enable delayed/scheduled messages",
    "UseMessageScheduler": true
  }
}
