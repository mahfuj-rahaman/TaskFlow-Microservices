# =============================================================================
# Docker Compose Override for Visual Studio Development
# =============================================================================
# This file is automatically used by Visual Studio and docker-compose
# It overrides settings in docker-compose.yml for local development
# =============================================================================

services:
  # ===========================================================================
  # API GATEWAY - Development Overrides
  # ===========================================================================
  api-gateway:
    environment:
      - ASPNETCORE_ENVIRONMENT=Development
      - ASPNETCORE_URLS=http://+:8080
      - ASPNETCORE_HTTP_PORTS=8080
    ports:
      - "5000:8080"  # Map to localhost:5000
      - "5080:8081"  # HTTPS port (if needed)
    volumes:
      - ${APPDATA}/Microsoft/UserSecrets:/home/app/.microsoft/usersecrets:ro
      - ${APPDATA}/ASP.NET/Https:/home/app/.aspnet/https:ro
    labels:
      - "com.microsoft.visualstudio.debuggee.program=dotnet"
      - "com.microsoft.visualstudio.debuggee.workingdirectory=/app"

  # ===========================================================================
  # IDENTITY SERVICE - Development Overrides
  # ===========================================================================
  identity-service:
